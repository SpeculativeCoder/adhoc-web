{
  "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
  "version": 1,
  "cli": {
    "packageManager": "pnpm"
  },
  "newProjectRoot": "projects",
  "schematics": {
    "@schematics/angular:component": {
      "addTypeToClassName": true,
      "changeDetection": "OnPush",
      "skipTests": true,
      "style": "none",
      "type": "component"
    }
  },
  "projects": {
    "adhoc-angular": {
      "projectType": "application",
      "schematics": {
        "@schematics/angular:component": {
          "style": "scss"
        }
      },
      "root": "",
      "sourceRoot": "src",
      "prefix": "app",
      "i18n": {
        "sourceLocale": "en",
        "locales": {
          "en-US": {
            "translation": [
              "src/locale/messages.en-US.xlf"
            ],
            "baseHref": ""
          }
        }
      },
      "architect": {
        "build": {
          "builder": "@angular/build:application",
          "options": {
            "outputPath": "dist/production/adhoc-angular",
            "index": "src/index.html",
            "browser": "src/main.ts",
            "polyfills": [
              "src/polyfills.ts"
            ],
            "tsConfig": "tsconfig.app.json",
            "inlineStyleLanguage": "scss",
            "assets": [
              {
                "glob": "**/*",
                "input": "public"
              }
            ],
            "styles": [
              "src/styles.scss"
            ],
            "stylePreprocessorOptions": {
              "sass": {
                "silenceDeprecations": [
                  "import"
                ]
              }
            },
            "scripts": [
              "node_modules/bootstrap/dist/js/bootstrap.bundle.js"
            ],
            "i18nMissingTranslation": "error",
            "i18nDuplicateTranslation": "error"
          },
          "configurations": {
            "jsdom_fix": {
              "externalDependencies": [
                "jsdom"
              ]
            },
            "production": {
              "budgets": [
                {
                  "type": "initial",
                  "maximumWarning": "2MB",
                  "maximumError": "5MB"
                },
                {
                  "type": "anyComponentStyle",
                  "maximumWarning": "4kB",
                  "maximumError": "8kB"
                }
              ],
              "outputHashing": "all"
            },
            "development": {
              "outputPath": "dist/development/adhoc-angular",
              "optimization": false,
              "extractLicenses": false,
              "sourceMap": true
            },
            "customization": {
              "fileReplacements": [
                {
                  "replace": "src/app/customization.ts",
                  "with": "src/customization/customization.ts"
                }
              ]
            },
            "en-US": {
              "localize": [
                "en-US"
              ]
            }
          },
          "defaultConfiguration": "production"
        },
        "serve": {
          "builder": "@angular/build:dev-server",
          "options": {
            "buildTarget": "adhoc-angular:build",
            "proxyConfig": "src/proxy.conf.js",
            "poll": 1000
          },
          "configurations": {
            "production": {
              "buildTarget": "adhoc-angular:build:production"
            },
            "development": {
              "buildTarget": "adhoc-angular:build:development"
            },
            "customization": {
              "buildTarget": "adhoc-angular:build:customization"
            },
            "en-US": {
              "buildTarget": "adhoc-angular:build:en-US"
            }
          },
          "defaultConfiguration": "development"
        },
        "extract-i18n": {
          "builder": "@angular/build:extract-i18n",
          "options": {
            "buildTarget": "adhoc-angular:build",
            "format": "xlf2",
            "outputPath": "src/locale"
          },
          "configurations": {
            "jsdom_fix": {
              "buildTarget": "adhoc-angular:build:jsdom_fix"
            }
          },
          "defaultConfiguration": "jsdom_fix"
        },
        "test": {
          "builder": "@angular/build:unit-test"
        }
      }
    }
  },
  "cli": {
    "analytics": false
  }
}
