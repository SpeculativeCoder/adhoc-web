<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 https://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <groupId>adhoc</groupId>
    <artifactId>adhoc-web</artifactId>
    <version>0.0.1-SNAPSHOT</version>
  </parent>

  <groupId>adhoc</groupId>
  <artifactId>adhoc-angular</artifactId>
  <version>0.0.1-SNAPSHOT</version>
  <name>adhoc-angular</name>
  <description>adhoc-angular</description>

  <properties>
    <adhoc-angular-customization/>
  </properties>

  <build>
    <resources>
      <resource>
        <directory>dist/${angular.configuration}/adhoc-angular/browser/en-US</directory>
        <includes>
          <include>index.html</include>
        </includes>
        <targetPath>templates</targetPath>
      </resource>

      <resource>
        <directory>dist/${angular.configuration}/adhoc-angular/browser/en-US</directory>
        <excludes>
          <exclude>index.html</exclude>
        </excludes>
        <targetPath>static</targetPath>
      </resource>
    </resources>

    <!-- this is sometimes needed for npm e.g. if using older version of ng-boostrap -->
    <!-- &#45;&#45;legacy-peer-deps -->

    <plugins>
      <plugin>
        <groupId>org.codehaus.mojo</groupId>
        <artifactId>exec-maven-plugin</artifactId>
        <executions>
          <execution>
            <id>build node_pnpm</id>
            <phase>generate-resources</phase>
            <goals>
              <goal>exec</goal>
            </goals>
            <configuration>
              <executable>docker</executable>
              <arguments>
                <argument>build</argument>
                <argument>-t</argument>
                <argument>node_pnpm</argument>
                <argument>./node_pnpm/.</argument>
              </arguments>
            </configuration>
          </execution>
          <execution>
            <id>pnpm ci</id>
            <phase>generate-resources</phase>
            <goals>
              <goal>exec</goal>
            </goals>
            <configuration>
              <executable>docker</executable>
              <arguments>
                <argument>run</argument>
                <argument>-v</argument>
                <argument>./node_modules:/home/node/app/node_modules</argument>
                <argument>-v</argument>
                <argument>./package.json:/home/node/app/package.json:ro</argument>
                <argument>-v</argument>
                <argument>./pnpm-lock.yaml:/home/node/app/pnpm-lock.yaml:ro</argument>
                <argument>--rm</argument>
                <argument>node_pnpm</argument>
                <argument>pnpm</argument>
                <argument>install</argument>
                <argument>--frozen-lockfile</argument>
                <argument>--ignore-scripts</argument>
              </arguments>
            </configuration>
          </execution>
          <execution>
            <id>pnpm run build</id>
            <phase>generate-resources</phase>
            <goals>
              <goal>exec</goal>
            </goals>
            <configuration>
              <executable>docker</executable>
              <arguments>
                <argument>run</argument>
                <argument>-v</argument>
                <argument>./.angular:/home/node/app/.angular:ro</argument>
                <argument>-v</argument>
                <argument>./dist:/home/node/app/dist</argument>
                <argument>-v</argument>
                <argument>./node_modules:/home/node/app/node_modules:ro</argument>
                <argument>-v</argument>
                <argument>./src:/home/node/app/src:ro</argument>
                <argument>-v</argument>
                <argument>./angular.json:/home/node/app/angular.json:ro</argument>
                <argument>-v</argument>
                <argument>./package.json:/home/node/app/package.json:ro</argument>
                <argument>-v</argument>
                <argument>./tsconfig.app.json:/home/node/app/tsconfig.app.json:ro</argument>
                <argument>-v</argument>
                <argument>./tsconfig.json:/home/node/app/tsconfig.json:ro</argument>
                <argument>-v</argument>
                <argument>./tsconfig.spec.json:/home/node/app/tsconfig.spec.json:ro</argument>
                <argument>--rm</argument>
                <argument>node_pnpm</argument>
                <argument>pnpm</argument>
                <argument>run</argument>
                <argument>build</argument>
                <!-- TODO: remove jsdom_fix when no longer needed -->
                <argument>--configuration=jsdom_fix,${angular.configuration}${adhoc-angular-customization},en-US</argument>
              </arguments>
              <!--<environmentVariables>-->
                <!-- TODO: figure out a way to have analytics on -->
                <!--<NG_CLI_ANALYTICS>false</NG_CLI_ANALYTICS>-->
              <!--</environmentVariables>-->
            </configuration>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>

  <profiles>
    <profile>
      <id>adhoc-angular-customization</id>
      <activation>
        <file>
          <exists>src/customization/customization.ts</exists>
        </file>
      </activation>
      <properties>
        <adhoc-angular-customization>,customization</adhoc-angular-customization>
      </properties>
    </profile>
  </profiles>

</project>
