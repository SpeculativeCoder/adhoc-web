<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <!-- TODO: until the schema / architecture settles down we are nuking most tables/data (except e.g. user information) -->

    <changeSet id="0000000000000-1" author="adhoc" runAlways="true">

        <preConditions onFail="CONTINUE">
            <tableExists tableName="universe"/>
        </preConditions>

        <dropTable tableName="message"/>
        <dropTable tableName="server_task"/>
        <dropTable tableName="kiosk_task"/>
        <dropTable tableName="manager_task"/>
        <dropTable tableName="structure"/>
        <dropTable tableName="user_state"/>
        <dropTable tableName="pawn"/>
        <dropTable tableName="objective_linked_objectives"/>
        <dropTable tableName="objective"/>
        <dropTable tableName="area"/>
        <dropTable tableName="server"/>
        <dropTable tableName="region"/>

    </changeSet>

</databaseChangeLog>
