<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="0000000000006-1" author="adhoc" runAlways="true">

        <createSequence sequenceName="area_id_sequence"
                        startValue="1"
                        incrementBy="1"/>

        <createTable tableName="area">
            <column name="id"
                    type="BIGINT">
                <constraints nullable="false"
                             primaryKey="true"
                             primaryKeyName="pk_area"/>
            </column>
            <column name="version"
                    type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="region_id"
                    type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="index"
                    type="INTEGER">
                <constraints nullable="false"/>
            </column>
            <column name="name"
                    type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="x"
                    type="DECIMAL">
                <constraints nullable="false"/>
            </column>
            <column name="y"
                    type="DECIMAL">
                <constraints nullable="false"/>
            </column>
            <column name="z"
                    type="DECIMAL">
                <constraints nullable="false"/>
            </column>
            <column name="sizex"
                    type="DECIMAL">
                <constraints nullable="false"/>
            </column>
            <column name="sizey"
                    type="DECIMAL">
                <constraints nullable="false"/>
            </column>
            <column name="sizez"
                    type="DECIMAL">
                <constraints nullable="false"/>
            </column>
            <column name="server_id"
                    type="BIGINT"/>
        </createTable>

        <addForeignKeyConstraint baseColumnNames="region_id"
                                 baseTableName="area"
                                 constraintName="fk_area_on_region"
                                 referencedColumnNames="id"
                                 referencedTableName="region"/>

        <addForeignKeyConstraint baseColumnNames="server_id"
                                 baseTableName="area"
                                 constraintName="fk_area_on_server"
                                 referencedColumnNames="id"
                                 referencedTableName="server"/>

        <addUniqueConstraint columnNames="region_id, index"
                             constraintName="uc_area_region_id_index"
                             tableName="area"/>

    </changeSet>

</databaseChangeLog>
