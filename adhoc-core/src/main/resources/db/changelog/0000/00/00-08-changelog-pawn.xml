<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="0000000000008-1" author="adhoc" runAlways="true">

        <createSequence sequenceName="pawn_id_sequence"
                        startValue="1"
                        incrementBy="100"/>

        <createTable tableName="pawn">
            <column name="id"
                    type="BIGINT">
                <constraints nullable="false"
                             primaryKey="true"
                             primaryKeyName="pk_pawn"/>
            </column>
            <column name="version"
                    type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="uuid"
                    type="UUID">
                <constraints nullable="false"
                             unique="true"
                             uniqueConstraintName="uc_pawn_uuid"/>
            </column>
            <column name="server_id"
                    type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="index"
                    type="INTEGER">
                <constraints nullable="false"/>
            </column>
            <column name="name"
                    type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="description"
                    type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="x"
                    type="DECIMAL">
                <constraints nullable="false"/>
            </column>
            <column name="y"
                    type="DECIMAL">
                <constraints nullable="false"/>
            </column>
            <column name="z"
                    type="DECIMAL">
                <constraints nullable="false"/>
            </column>
            <column name="pitch"
                    type="DECIMAL">
                <constraints nullable="false"/>
            </column>
            <column name="yaw"
                    type="DECIMAL">
                <constraints nullable="false"/>
            </column>
            <column name="user_id"
                    type="BIGINT"/>
            <column name="human"
                    type="BOOLEAN">
                <constraints nullable="false"/>
            </column>
            <column name="faction_id"
                    type="BIGINT"/>
            <column name="seen"
                    type="TIMESTAMP WITHOUT TIME ZONE">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addForeignKeyConstraint baseColumnNames="server_id"
                                 baseTableName="pawn"
                                 constraintName="fk_pawn_on_server"
                                 referencedColumnNames="id"
                                 referencedTableName="server"/>

        <addForeignKeyConstraint baseColumnNames="user_id"
                                 baseTableName="pawn"
                                 constraintName="fk_pawn_on_user"
                                 referencedColumnNames="id"
                                 referencedTableName="user_"/>

        <addForeignKeyConstraint baseColumnNames="faction_id"
                                 baseTableName="pawn"
                                 constraintName="fk_pawn_on_faction"
                                 referencedColumnNames="id"
                                 referencedTableName="faction"/>

    </changeSet>

</databaseChangeLog>
