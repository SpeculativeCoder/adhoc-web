<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="0000000000010-1" author="adhoc" runAlways="true">

        <createSequence sequenceName="structure_id_sequence"
                        startValue="1"
                        incrementBy="1"/>

        <createTable tableName="structure">
            <column name="id"
                    type="BIGINT">
                <constraints nullable="false"
                             primaryKey="true"
                             primaryKeyName="pk_structure"/>
            </column>
            <column name="version"
                    type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="uuid"
                    type="UUID">
                <constraints nullable="false"/>
            </column>
            <column name="name"
                    type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="type"
                    type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="region_id"
                    type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="x"
                    type="DECIMAL">
                <constraints nullable="false"/>
            </column>
            <column name="y"
                    type="DECIMAL">
                <constraints nullable="false"/>
            </column>
            <column name="z"
                    type="DECIMAL">
                <constraints nullable="false"/>
            </column>
            <column name="pitch"
                    type="DECIMAL">
                <constraints nullable="false"/>
            </column>
            <column name="yaw"
                    type="DECIMAL">
                <constraints nullable="false"/>
            </column>
            <column name="roll"
                    type="DECIMAL">
                <constraints nullable="false"/>
            </column>
            <column name="scalex"
                    type="DECIMAL">
                <constraints nullable="false"/>
            </column>
            <column name="scaley"
                    type="DECIMAL">
                <constraints nullable="false"/>
            </column>
            <column name="scalez"
                    type="DECIMAL">
                <constraints nullable="false"/>
            </column>
            <column name="sizex"
                    type="DECIMAL">
                <constraints nullable="false"/>
            </column>
            <column name="sizey"
                    type="DECIMAL">
                <constraints nullable="false"/>
            </column>
            <column name="sizez"
                    type="DECIMAL">
                <constraints nullable="false"/>
            </column>
            <column name="faction_id"
                    type="BIGINT"/>
            <column name="user_id"
                    type="BIGINT"/>
        </createTable>

        <addForeignKeyConstraint baseColumnNames="region_id"
                                 baseTableName="structure"
                                 constraintName="fk_structure_on_region"
                                 referencedColumnNames="id"
                                 referencedTableName="region"/>

        <addForeignKeyConstraint baseColumnNames="faction_id"
                                 baseTableName="structure"
                                 constraintName="fk_structure_on_faction"
                                 referencedColumnNames="id"
                                 referencedTableName="faction"/>

        <addForeignKeyConstraint baseColumnNames="user_id"
                                 baseTableName="structure"
                                 constraintName="fk_structure_on_user"
                                 referencedColumnNames="id"
                                 referencedTableName="user_"/>

    </changeSet>

</databaseChangeLog>
