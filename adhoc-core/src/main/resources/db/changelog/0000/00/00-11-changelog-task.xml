<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="0000000000011-1" author="adhoc" runAlways="true">

        <createSequence sequenceName="task_id_sequence"
                        startValue="1"
                        incrementBy="1"/>

        <createTable tableName="manager_task">
            <column name="id"
                    type="BIGINT">
                <constraints nullable="false"
                             primaryKey="true"
                             primaryKeyName="pk_managertask"/>
            </column>
            <column name="version" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="task_identifier"
                    type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="private_ip"
                    type="VARCHAR(255)"/>
            <column name="public_ip"
                    type="VARCHAR(255)"/>
            <column name="public_web_socket_port"
                    type="INTEGER"/>
            <column name="domain"
                    type="VARCHAR(255)"/>
            <column name="initiated"
                    type="TIMESTAMP WITHOUT TIME ZONE"/>
            <column name="seen"
                    type="TIMESTAMP WITHOUT TIME ZONE"/>
        </createTable>

        <addUniqueConstraint columnNames="task_identifier"
                             constraintName="uc_managertask_task_identifier"
                             tableName="manager_task"/>

        <createTable tableName="kiosk_task">
            <column name="id"
                    type="BIGINT">
                <constraints nullable="false"
                             primaryKey="true"
                             primaryKeyName="pk_kiosktask"/>
            </column>
            <column name="version" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="task_identifier"
                    type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="private_ip"
                    type="VARCHAR(255)"/>
            <column name="public_ip"
                    type="VARCHAR(255)"/>
            <column name="public_web_socket_port"
                    type="INTEGER"/>
            <column name="domain"
                    type="VARCHAR(255)"/>
            <column name="initiated"
                    type="TIMESTAMP WITHOUT TIME ZONE"/>
            <column name="seen"
                    type="TIMESTAMP WITHOUT TIME ZONE"/>
        </createTable>

        <addUniqueConstraint columnNames="task_identifier"
                             constraintName="uc_kiosktask_task_identifier"
                             tableName="kiosk_task"/>

        <createTable tableName="server_task">
            <column name="id"
                    type="BIGINT">
                <constraints nullable="false"
                             primaryKey="true"
                             primaryKeyName="pk_servertask"/>
            </column>
            <column name="version" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="task_identifier"
                    type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="private_ip"
                    type="VARCHAR(255)"/>
            <column name="public_ip"
                    type="VARCHAR(255)"/>
            <column name="public_web_socket_port"
                    type="INTEGER"/>
            <column name="domain"
                    type="VARCHAR(255)"/>
            <column name="initiated"
                    type="TIMESTAMP WITHOUT TIME ZONE"/>
            <column name="seen"
                    type="TIMESTAMP WITHOUT TIME ZONE"/>
            <column name="server_id"
                    type="BIGINT">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addUniqueConstraint columnNames="task_identifier"
                             constraintName="uc_servertask_task_identifier"
                             tableName="server_task"/>

    </changeSet>

</databaseChangeLog>
