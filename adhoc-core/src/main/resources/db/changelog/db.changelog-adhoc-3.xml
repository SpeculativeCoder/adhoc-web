<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.9.xsd">

    <!-- until the schema / architecture settles down we are nuking all tables/data (except user information) on every run -->
    <changeSet author="adhoc" id="3" runOnChange="true">

        <sql dbms="postgresql">
            truncate
                qrtz_simple_triggers,
                qrtz_cron_triggers,
                qrtz_simprop_triggers,
                qrtz_blob_triggers,
                qrtz_triggers,
                qrtz_job_details,
                qrtz_calendars,
                qrtz_paused_trigger_grps,
                qrtz_fired_triggers,
                qrtz_scheduler_state,
                qrtz_locks;
        </sql>

        <sql dbms="postgresql">
            drop table if exists world_manager_hosts;
            drop table if exists world_kiosk_hosts;
            drop table if exists world;
            drop table if exists objective_linked_objectives;
            drop table if exists objective;
            drop table if exists area;
            drop table if exists pawn;
            drop table if exists server;
            drop table if exists structure;
            drop table if exists faction;
            drop table if exists region;
            drop table if exists task;
            drop table if exists manager_task;
            drop table if exists kiosk_task;
            drop table if exists server_task;
        </sql>

        <createSequence sequenceName="world_id_sequence" startValue="1" incrementBy="50"/>
        <createTable tableName="world">
            <column name="id" type="BIGINT">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_world"/>
            </column>
            <column name="version" type="BIGINT">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <createTable tableName="world_manager_hosts">
            <column name="world_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="manager_hosts" type="VARCHAR(255)"/>
        </createTable>
        <createTable tableName="world_kiosk_hosts">
            <column name="world_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="kiosk_hosts" type="VARCHAR(255)"/>
        </createTable>
        <addForeignKeyConstraint baseColumnNames="world_id" baseTableName="world_manager_hosts" constraintName="fk_worldmanagerhosts_on_world"
                                 deferrable="false" initiallyDeferred="false" onDelete="NO ACTION" onUpdate="NO ACTION" referencedColumnNames="id"
                                 referencedTableName="world" validate="true"/>
        <addForeignKeyConstraint baseColumnNames="world_id" baseTableName="world_kiosk_hosts" constraintName="fk_worldkioskhosts_on_world"
                                 deferrable="false" initiallyDeferred="false" onDelete="NO ACTION" onUpdate="NO ACTION" referencedColumnNames="id"
                                 referencedTableName="world" validate="true"/>

        <createSequence sequenceName="faction_id_sequence" startValue="1" incrementBy="50"/>
        <createTable tableName="faction">
            <column name="id" type="BIGINT">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_faction"/>
            </column>
            <column name="version" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="index" type="INTEGER">
                <constraints nullable="false" unique="true" validateUnique="true" uniqueConstraintName="uc_faction_index"/>
            </column>
            <column name="name" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="color" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="score" type="DECIMAL">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <createSequence sequenceName="region_id_sequence" startValue="1" incrementBy="50"/>
        <createTable tableName="region">
            <column name="id" type="BIGINT">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_region"/>
            </column>
            <column name="version" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="name" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="map_name" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="x" type="DOUBLE">
                <constraints nullable="false"/>
            </column>
            <column name="y" type="DOUBLE">
                <constraints nullable="false"/>
            </column>
            <column name="z" type="DOUBLE">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <createSequence sequenceName="server_id_sequence" startValue="1" incrementBy="50"/>
        <createTable tableName="server">
            <column name="id" type="BIGINT">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_server"/>
            </column>
            <column name="version" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="name" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="region_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="map_name" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="x" type="DOUBLE">
                <constraints nullable="false"/>
            </column>
            <column name="y" type="DOUBLE">
                <constraints nullable="false"/>
            </column>
            <column name="z" type="DOUBLE">
                <constraints nullable="false"/>
            </column>
            <column name="status" type="TINYINT">
                <constraints nullable="false"/>
            </column>
            <column name="manager_host" type="VARCHAR(255)"/>
            <column name="private_ip" type="VARCHAR(255)"/>
            <column name="public_ip" type="VARCHAR(255)"/>
            <column name="public_web_socket_port" type="INTEGER"/>
            <column name="web_socket_url" type="VARCHAR(255)"/>
            <column name="initiated" type="TIMESTAMP WITHOUT TIME ZONE"/>
            <column name="seen" type="TIMESTAMP WITHOUT TIME ZONE"/>
        </createTable>
        <addForeignKeyConstraint baseTableName="server" baseColumnNames="region_id" constraintName="fk_server_on_region" deferrable="false"
                                 initiallyDeferred="false" onDelete="NO ACTION" onUpdate="NO ACTION" referencedColumnNames="id" referencedTableName="region"
                                 validate="true"/>

        <createSequence sequenceName="area_id_sequence" startValue="1" incrementBy="50"/>
        <createTable tableName="area">
            <column name="id" type="BIGINT">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_area"/>
            </column>
            <column name="version" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="region_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="index" type="INTEGER">
                <constraints nullable="false"/>
            </column>
            <column name="name" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="x" type="DOUBLE">
                <constraints nullable="false"/>
            </column>
            <column name="y" type="DOUBLE">
                <constraints nullable="false"/>
            </column>
            <column name="z" type="DOUBLE">
                <constraints nullable="false"/>
            </column>
            <column name="sizex" type="DOUBLE">
                <constraints nullable="false"/>
            </column>
            <column name="sizey" type="DOUBLE">
                <constraints nullable="false"/>
            </column>
            <column name="sizez" type="DOUBLE">
                <constraints nullable="false"/>
            </column>
            <column name="server_id" type="BIGINT"/>
        </createTable>
        <addForeignKeyConstraint baseTableName="area" baseColumnNames="region_id" constraintName="fk_area_on_region" deferrable="false"
                                 initiallyDeferred="false" onDelete="NO ACTION" onUpdate="NO ACTION" referencedColumnNames="id" referencedTableName="region"
                                 validate="true"/>
        <addForeignKeyConstraint baseTableName="area" baseColumnNames="server_id" constraintName="fk_area_on_server" deferrable="false"
                                 initiallyDeferred="false" onDelete="NO ACTION" onUpdate="NO ACTION" referencedColumnNames="id" referencedTableName="server"
                                 validate="true"/>
        <addUniqueConstraint tableName="area" columnNames="region_id, index" validate="true" constraintName="uc_area_region_id_index"/>

        <createSequence sequenceName="objective_id_sequence" startValue="1" incrementBy="50"/>
        <createTable tableName="objective">
            <column name="id" type="BIGINT">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_objective"/>
            </column>
            <column name="version" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="region_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="index" type="INTEGER">
                <constraints nullable="false"/>
            </column>
            <column name="name" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="x" type="DOUBLE">
                <constraints nullable="false"/>
            </column>
            <column name="y" type="DOUBLE">
                <constraints nullable="false"/>
            </column>
            <column name="z" type="DOUBLE">
                <constraints nullable="false"/>
            </column>
            <column name="initial_faction_id" type="BIGINT"/>
            <column name="faction_id" type="BIGINT"/>
            <column name="area_id" type="BIGINT"/>
        </createTable>
        <addForeignKeyConstraint baseTableName="objective" baseColumnNames="region_id" constraintName="fk_objective_on_region" deferrable="false"
                                 initiallyDeferred="false" onDelete="NO ACTION" onUpdate="NO ACTION" referencedColumnNames="id" referencedTableName="region"
                                 validate="true"/>
        <addForeignKeyConstraint baseTableName="objective" baseColumnNames="initial_faction_id" constraintName="fk_objective_on_initial_faction" deferrable="false"
                                 initiallyDeferred="false" onDelete="NO ACTION" onUpdate="NO ACTION" referencedColumnNames="id" referencedTableName="faction"
                                 validate="true"/>
        <addForeignKeyConstraint baseTableName="objective" baseColumnNames="faction_id" constraintName="fk_objective_on_faction" deferrable="false"
                                 initiallyDeferred="false" onDelete="NO ACTION" onUpdate="NO ACTION" referencedColumnNames="id" referencedTableName="faction"
                                 validate="true"/>
        <addForeignKeyConstraint baseTableName="objective" baseColumnNames="area_id" constraintName="fk_objective_on_area" deferrable="false"
                                 initiallyDeferred="false" onDelete="NO ACTION" onUpdate="NO ACTION" referencedColumnNames="id" referencedTableName="area"
                                 validate="true"/>
        <addUniqueConstraint tableName="objective" columnNames="region_id, index" validate="true" constraintName="uc_objective_region_id_index"/>

        <createTable tableName="objective_linked_objectives">
            <column name="objective_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="linked_objectives_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <addPrimaryKey columnNames="objective_id, linked_objectives_id"
                       constraintName="pk_objectivelinkedobjectives"
                       tableName="objective_linked_objectives"/>
        <addForeignKeyConstraint baseTableName="objective_linked_objectives" baseColumnNames="objective_id" constraintName="fk_objectivelinkedobjectives_on_objective"
                                 deferrable="false" initiallyDeferred="false" onDelete="NO ACTION" onUpdate="NO ACTION" referencedColumnNames="id"
                                 referencedTableName="objective" validate="true"/>
        <addForeignKeyConstraint baseTableName="objective_linked_objectives" baseColumnNames="linked_objectives_id" constraintName="fk_objectivelinkedobjectives_on_linkedobjectives"
                                 deferrable="false" initiallyDeferred="false" onDelete="NO ACTION" onUpdate="NO ACTION" referencedColumnNames="id"
                                 referencedTableName="objective" validate="true"/>

        <createSequence sequenceName="pawn_id_sequence" startValue="1" incrementBy="50"/>
        <createTable tableName="pawn">
            <column name="id" type="BIGINT">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_pawn"/>
            </column>
            <column name="version" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="uuid" type="UUID">
                <constraints nullable="false" unique="true" validateUnique="true" uniqueConstraintName="uc_pawn_uuid"/>
            </column>
            <column name="server_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="index" type="INTEGER">
                <constraints nullable="false"/>
            </column>
            <column name="name" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="description" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="x" type="DOUBLE">
                <constraints nullable="false"/>
            </column>
            <column name="y" type="DOUBLE">
                <constraints nullable="false"/>
            </column>
            <column name="z" type="DOUBLE">
                <constraints nullable="false"/>
            </column>
            <column name="user_id" type="BIGINT"/>
            <column name="human" type="BOOLEAN">
                <constraints nullable="false"/>
            </column>
            <column name="faction_id" type="BIGINT"/>
            <column name="seen" type="TIMESTAMP WITHOUT TIME ZONE">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <addForeignKeyConstraint baseTableName="pawn" baseColumnNames="server_id" constraintName="fk_pawn_on_server" deferrable="false"
                                 initiallyDeferred="false" onDelete="NO ACTION" onUpdate="NO ACTION" referencedColumnNames="id" referencedTableName="server"
                                 validate="true"/>
        <addForeignKeyConstraint baseTableName="pawn" baseColumnNames="user_id" constraintName="fk_pawn_on_user" deferrable="false"
                                 initiallyDeferred="false" onDelete="NO ACTION" onUpdate="NO ACTION" referencedColumnNames="id"
                                 referencedTableName="adhoc_user" validate="true"/>
        <addForeignKeyConstraint baseTableName="pawn" baseColumnNames="faction_id" constraintName="fk_pawn_on_faction" deferrable="false"
                                 initiallyDeferred="false" onDelete="NO ACTION" onUpdate="NO ACTION" referencedColumnNames="id" referencedTableName="faction"
                                 validate="true"/>

        <createSequence sequenceName="structure_id_sequence" startValue="1" incrementBy="50"/>
        <createTable tableName="structure">
            <column name="id" type="BIGINT">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_structure"/>
            </column>
            <column name="version" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="uuid" type="UUID">
                <constraints nullable="false"/>
            </column>
            <column name="name" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="type" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="region_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="x" type="DOUBLE">
                <constraints nullable="false"/>
            </column>
            <column name="y" type="DOUBLE">
                <constraints nullable="false"/>
            </column>
            <column name="z" type="DOUBLE">
                <constraints nullable="false"/>
            </column>
            <column name="pitch" type="DOUBLE">
                <constraints nullable="false"/>
            </column>
            <column name="yaw" type="DOUBLE">
                <constraints nullable="false"/>
            </column>
            <column name="roll" type="DOUBLE">
                <constraints nullable="false"/>
            </column>
            <column name="scalex" type="DOUBLE">
                <constraints nullable="false"/>
            </column>
            <column name="scaley" type="DOUBLE">
                <constraints nullable="false"/>
            </column>
            <column name="scalez" type="DOUBLE">
                <constraints nullable="false"/>
            </column>
            <column name="sizex" type="DOUBLE">
                <constraints nullable="false"/>
            </column>
            <column name="sizey" type="DOUBLE">
                <constraints nullable="false"/>
            </column>
            <column name="sizez" type="DOUBLE">
                <constraints nullable="false"/>
            </column>
            <column name="faction_id" type="BIGINT"/>
            <column name="user_id" type="BIGINT"/>
        </createTable>
        <addForeignKeyConstraint baseColumnNames="region_id" baseTableName="structure" constraintName="fk_structure_on_region" deferrable="false"
                                 initiallyDeferred="false" onDelete="NO ACTION" onUpdate="NO ACTION" referencedColumnNames="id" referencedTableName="region"
                                 validate="true"/>
        <addForeignKeyConstraint baseColumnNames="faction_id" baseTableName="structure" constraintName="fk_structure_on_faction" deferrable="false"
                                 initiallyDeferred="false" onDelete="NO ACTION" onUpdate="NO ACTION" referencedColumnNames="id" referencedTableName="faction"
                                 validate="true"/>
        <addForeignKeyConstraint baseColumnNames="user_id" baseTableName="structure" constraintName="fk_structure_on_user" deferrable="false"
                                 initiallyDeferred="false" onDelete="NO ACTION" onUpdate="NO ACTION" referencedColumnNames="id"
                                 referencedTableName="adhoc_user" validate="true"/>

        <createSequence sequenceName="task_id_sequence"
                        startValue="1"
                        incrementBy="50"/>

        <createTable tableName="manager_task">
            <column name="id"
                    type="BIGINT">
                <constraints nullable="false"
                             primaryKey="true"
                             primaryKeyName="pk_managertask"/>
            </column>
            <column name="version" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="task_identifier"
                    type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="private_ip"
                    type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="public_ip"
                    type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <createTable tableName="kiosk_task">
            <column name="id"
                    type="BIGINT">
                <constraints nullable="false"
                             primaryKey="true"
                             primaryKeyName="pk_kiosktask"/>
            </column>
            <column name="version" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="task_identifier"
                    type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="private_ip"
                    type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="public_ip"
                    type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <createTable tableName="server_task">
            <column name="id"
                    type="BIGINT">
                <constraints nullable="false"
                             primaryKey="true"
                             primaryKeyName="pk_servertask"/>
            </column>
            <column name="version" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="task_identifier"
                    type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="private_ip"
                    type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="public_ip"
                    type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="public_web_socket_port"
                    type="INT">
                <constraints nullable="false"/>
            </column>
            <column name="server_id"
                    type="BIGINT"/>
        </createTable>

    </changeSet>

</databaseChangeLog>
