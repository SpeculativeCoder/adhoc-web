                <constraints nullable="false"/>
            </column>
            <column name="y"
                    type="DOUBLE">
                <constraints nullable="false"/>
            </column>
            <column name="z"
                    type="DOUBLE">
                <constraints nullable="false"/>
            </column>
            <column name="sizex"
                    type="DOUBLE">
                <constraints nullable="false"/>
            </column>
            <column name="sizey"
                    type="DOUBLE">
                <constraints nullable="false"/>
            </column>
            <column name="sizez"
                    type="DOUBLE">
                <constraints nullable="false"/>
            </column>
            <column name="server_id"
                    type="BIGINT"/>
        </createTable>

        <addForeignKeyConstraint baseColumnNames="region_id"
                                 baseTableName="area"
                                 constraintName="fk_area_on_region"
                                 referencedColumnNames="id"
                                 referencedTableName="region"/>

        <addForeignKeyConstraint baseColumnNames="server_id"
                                 baseTableName="area"
                                 constraintName="fk_area_on_server"
                                 referencedColumnNames="id"
                                 referencedTableName="server"/>

        <addUniqueConstraint columnNames="region_id, index"
                             constraintName="uc_area_region_id_index"
                             tableName="area"/>

        <createSequence sequenceName="objective_id_sequence"
                        startValue="1"
                        incrementBy="50"/>

        <createTable tableName="objective">
            <column name="id"
                    type="BIGINT">
                <constraints nullable="false"
                             primaryKey="true"
                             primaryKeyName="pk_objective"/>
            </column>
            <column name="version"
                    type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="region_id"
                    type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="index"
                    type="INTEGER">
                <constraints nullable="false"/>
            </column>
            <column name="name"
                    type="VARCHAR(255)">
                <constraints nullable="false"/>
