<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.9.xsd">

    <!-- until the schema / architecture settles down we are nuking all tables/data (except user information) on every run -->
    <changeSet author="adhoc" id="3" runOnChange="true">

        <sql dbms="postgresql">
            truncate
                qrtz_simple_triggers,
                qrtz_cron_triggers,
                qrtz_simprop_triggers,
                qrtz_blob_triggers,
                qrtz_triggers,
                qrtz_job_details,
                qrtz_calendars,
                qrtz_paused_trigger_grps,
                qrtz_fired_triggers,
                qrtz_scheduler_state,
                qrtz_locks;
        </sql>

        <sql dbms="postgresql">
            drop table if exists world;
            drop table if exists objective_linked_objectives;
            drop table if exists objective;
            drop table if exists area;
            drop table if exists pawn;
            drop table if exists server;
            drop table if exists structure;
            drop table if exists faction;
            drop table if exists region;
            drop table if exists manager_task;
            drop table if exists kiosk_task;
            drop table if exists server_task;
        </sql>

        <createSequence sequenceName="world_id_sequence"
                        startValue="1"
                        incrementBy="50"/>

        <createTable tableName="world">
            <column name="id"
                    type="BIGINT">
                <constraints nullable="false"
                             primaryKey="true"
                             primaryKeyName="pk_world"/>
            </column>
            <column name="version" type="BIGINT">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <createSequence sequenceName="faction_id_sequence"
                        startValue="1"
                        incrementBy="50"/>

        <createTable tableName="faction">
            <column name="id"
                    type="BIGINT">
                <constraints nullable="false"
                             primaryKey="true"
                             primaryKeyName="pk_faction"/>
            </column>
            <column name="version"
                    type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="index"
                    type="INTEGER">
                <constraints nullable="false"
                             unique="true"
                             uniqueConstraintName="uc_faction_index"/>
            </column>
            <column name="name"
                    type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="color"
                    type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="score"
                    type="DECIMAL(128,32)">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <createSequence sequenceName="region_id_sequence"
                        startValue="1"
                        incrementBy="50"/>

        <createTable tableName="region">
            <column name="id"
                    type="BIGINT">
                <constraints nullable="false"
                             primaryKey="true"
                             primaryKeyName="pk_region"/>
            </column>
            <column name="version"
                    type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="name"
                    type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="map_name"
                    type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="x"
                    type="DOUBLE">
                <constraints nullable="false"/>
            </column>
            <column name="y"
                    type="DOUBLE">
                <constraints nullable="false"/>
            </column>
            <column name="z"
                    type="DOUBLE">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <createSequence sequenceName="server_id_sequence"
                        startValue="1"
                        incrementBy="50"/>

        <createTable tableName="server">
            <column name="id"
                    type="BIGINT">
                <constraints nullable="false"
                             primaryKey="true"
                             primaryKeyName="pk_server"/>
            </column>
            <column name="version"
                    type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="name"
                    type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="region_id"
                    type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="map_name"
                    type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="x"
                    type="DOUBLE">
                <constraints nullable="false"/>
            </column>
            <column name="y"
                    type="DOUBLE">
                <constraints nullable="false"/>
            </column>
            <column name="z"
                    type="DOUBLE">
                <constraints nullable="false"/>
            </column>
            <column name="status"
                    type="TINYINT">
                <constraints nullable="false"/>
            </column>
            <column name="manager_host"
                    type="VARCHAR(255)"/>
            <column name="private_ip"
                    type="VARCHAR(255)"/>
            <column name="public_ip"
                    type="VARCHAR(255)"/>
            <column name="public_web_socket_port"
                    type="INTEGER"/>
            <column name="domain"
                    type="VARCHAR(255)"/>
            <column name="web_socket_url"
                    type="VARCHAR(255)"/>
            <column name="initiated"
                    type="TIMESTAMP WITHOUT TIME ZONE"/>
            <column name="seen"
                    type="TIMESTAMP WITHOUT TIME ZONE"/>
        </createTable>

        <addForeignKeyConstraint baseColumnNames="region_id"
                                 baseTableName="server"
                                 constraintName="fk_server_on_region"
                                 referencedColumnNames="id"
                                 referencedTableName="region"/>

        <createSequence sequenceName="area_id_sequence"
                        startValue="1"
                        incrementBy="50"/>

        <createTable tableName="area">
