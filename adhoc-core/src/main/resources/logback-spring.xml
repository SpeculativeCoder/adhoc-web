<configuration packagingData="true">
    <!--<statusListener class="ch.qos.logback.core.status.OnConsoleStatusListener"/>-->

    <conversionRule conversionWord="color" class="adhoc.system.log.logback.AdhocColorLogbackConverter"/>
    <conversionRule conversionWord="specialChars" class="adhoc.system.log.logback.AdhocSpecialCharsLogbackConverter"/>
    <conversionRule conversionWord="specialCharsThrowable" class="adhoc.system.log.logback.AdhocSpecialCharsLogbackThrowableProxyConverter"/>

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">

        <!-- &#x00A0; -->
        <encoder>
            <pattern>%color(%date{yyyy-MM-dd'T'HH:mm:ss.SSS}%micros%date{xx}){bright_black} %color(%level){} %color([%thread]){blue} %color(%logger{1}){cyan}%color(:){bright_black} %color(%specialChars(%message)){}%replace( %specialChars(%kvp{NONE}){}){'^ $',''}%color(%replace( \(%specialChars(%mdc){}\)){'^ \(\)$',''}){bright_black}%n%specialCharsThrowable{}</pattern>
            <charset>${CONSOLE_LOG_CHARSET}</charset>
        </encoder>

        <!--<encoder class="org.springframework.boot.logging.logback.StructuredLogEncoder">
            <format>${CONSOLE_LOG_STRUCTURED_FORMAT}</format>
            <charset>${CONSOLE_LOG_CHARSET}</charset>
        </encoder>-->

        <filter class="adhoc.system.log.logback.AdhocLogbackMatcherFilter"/>

    </appender>

    <root level="all">
        <appender-ref ref="STDOUT"/>
    </root>
</configuration>
